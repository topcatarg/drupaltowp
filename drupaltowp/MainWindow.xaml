<Window x:Class="drupaltowp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:drupaltowp"
        mc:Ignorable="d"
        Title="Migrador Drupal 7 a WordPress" Height="600" Width="1000"
        MinHeight="500" MinWidth="800">

    <Grid>
        <!-- Definir las dos columnas -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MinWidth="180"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Splitter entre columnas -->
        <GridSplitter Grid.Column="1" 
                      Width="5" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Background="LightGray"/>

        <!-- Panel de botones (columna izquierda) -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="MIGRACIÓN" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <!-- Botón de Páginas -->
            <Button Name="BotonPaginas" 
                    Content="Migrar Páginas" 
                    Click="Button_Click" 
                    Height="35"
                    Margin="0,5"
                    Padding="5"/>

            <!-- Botón de Categorías -->
            <Button Name="MigrateCategoriesButton" 
                    Content="Migrar Categorías" 
                    Click="MigrateCategoriesButton_Click" 
                    Height="35"
                    Margin="0,5"
                    Padding="5"/>

            <!-- Botón de Posts -->
            <Button Name="MigratePostsButton" 
                    Content="Migrar Posts" 
                    Click="MigratePostsButton_Click" 
                    Height="35"
                    Margin="0,5"
                    Padding="5"/>

            <!-- Botón de Usuarios -->
            <Button Name="MigrateUsersButton" 
                    Content="Migrar Usuarios" 
                    Click="MigrateUsersButton_Click" 
                    Height="35"
                    Margin="0,5"
                    Padding="5"/>

            <!-- Botón de Imágenes -->
            <Button Name="MigrateImagesButton" 
                    Content="Migrar Imágenes" 
                    Click="MigrateImagesButton_Click" 
                    Height="35"
                    Margin="0,5"
                    Padding="5"/>

            <!-- Separador -->
            <Separator Margin="0,15,0,10"/>

            <!-- Botones de utilidad -->
            <Button Name="ClearLogButton" 
                    Content="Limpiar Log" 
                    Click="ClearLogButton_Click" 
                    Height="30"
                    Margin="0,5"
                    Background="LightBlue"/>

            <Button Name="ExportMappingButton" 
                    Content="Exportar Mapeos" 
                    Click="ExportMappingButton_Click" 
                    Height="30"
                    Margin="0,5"
                    Background="LightGreen"/>
        </StackPanel>

        <!-- Panel de log (columna derecha) -->
        <DockPanel Grid.Column="2" Margin="10">
            <!-- Título del log -->
            <TextBlock DockPanel.Dock="Top" 
                       Text="LOG DE MIGRACIÓN" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- Scroll viewer con el TextBlock -->
            <ScrollViewer Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Background="Black">
                <TextBlock Name="StatusTextBlock"
                           TextWrapping="Wrap"
                           Foreground="LimeGreen"
                           FontFamily="Consolas"
                           FontSize="12"
                           Margin="10"
                           Background="Black"/>
            </ScrollViewer>
        </DockPanel>

    </Grid>
</Window>